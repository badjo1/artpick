<!-- Flash Messages - Continuum Style -->

<% if flash[:notice] %>
  <div class="alert alert-success" style="margin-bottom: var(--spacing-md);">
    <span>✓</span>
    <span><%= flash[:notice] %></span>
    <button onclick="this.parentElement.remove()" style="margin-left: auto; background: none; border: none; color: inherit; cursor: pointer;">×</button>
  </div>
<% end %>

<% if flash[:alert] %>
  <div class="alert alert-error" style="margin-bottom: var(--spacing-md);">
    <span>!</span>
    <span><%= flash[:alert] %></span>
    <button onclick="this.parentElement.remove()" style="margin-left: auto; background: none; border: none; color: inherit; cursor: pointer;">×</button>
  </div>
<% end %>

<% if flash[:warning] %>
  <div class="alert" style="margin-bottom: var(--spacing-md); border-color: #ff9800; color: #ff9800;">
    <span>⚠</span>
    <span><%= flash[:warning] %></span>
    <button onclick="this.parentElement.remove()" style="margin-left: auto; background: none; border: none; color: inherit; cursor: pointer;">×</button>
  </div>
<% end %>

<style>
  .alert {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    padding: var(--spacing-md);
    border: 1px solid var(--color-border);
    font-size: var(--font-size-sm);
    font-family: var(--font-family);
  }

  .alert span:first-child {
    font-size: var(--font-size-lg);
  }

  .alert button {
    font-size: var(--font-size-xl);
    line-height: 1;
  }

  .alert button:hover {
    opacity: 0.7;
  }
</style>
