<!-- Flash Messages - Continuum Style -->

<% if flash[:notice] %>
  <div class="alert alert-success" data-controller="flash">
    <span>✓</span>
    <span><%= flash[:notice] %></span>
    <button data-action="click->flash#dismiss" type="button" class="alert-dismiss">×</button>
  </div>
<% end %>

<% if flash[:alert] %>
  <div class="alert alert-error" data-controller="flash">
    <span>!</span>
    <span><%= flash[:alert] %></span>
    <button data-action="click->flash#dismiss" type="button" class="alert-dismiss">×</button>
  </div>
<% end %>

<% if flash[:warning] %>
  <div class="alert alert-warning" data-controller="flash">
    <span>⚠</span>
    <span><%= flash[:warning] %></span>
    <button data-action="click->flash#dismiss" type="button" class="alert-dismiss">×</button>
  </div>
<% end %>
