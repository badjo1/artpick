<!-- Global Delete Confirmation Modal -->
<div class="modal-overlay hidden" data-modal-target="container" data-action="click->modal#close">
  <div class="modal-content">
    <div class="modal-header">
      <h2 data-modal-target="title">Confirm Deletion</h2>
    </div>
    <div class="modal-body" data-modal-target="body">
      <p>Are you sure you want to delete this item?</p>
      <p class="text-danger">This action cannot be undone.</p>
    </div>
    <div class="modal-actions">
      <button type="button" data-action="click->modal#close" class="btn">Cancel</button>
      <form action="#" method="post" data-modal-target="form" class="inline-form">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <%= hidden_field_tag :_method, 'delete' %>
        <%= submit_tag "Delete", class: "btn btn-danger" %>
      </form>
    </div>
  </div>
</div>
