<!-- Admin Layout with Sidebar -->
<div class="admin-wrapper">
  <!-- Sidebar -->
  <%= render "shared/admin_sidebar" %>

  <!-- Main Content -->
  <main class="admin-main">
    <!-- Top Bar -->
    <header class="admin-topbar">
      <div class="admin-topbar-title">THE CONTINUUM</div>

      <!-- User Menu -->
      <div class="admin-user-menu">
        <% if Current.user %>
          <span class="admin-user-email"><%= Current.user.email_address %></span>
          <%= button_to "Logout", session_path, method: :delete, class: "btn btn-small" %>
        <% end %>
      </div>
    </header>

    <!-- Page Content -->
    <div class="admin-content">
      <%= render "shared/flash_messages" %>
      <%= yield %>
    </div>
  </main>
</div>

<style>
  .admin-wrapper {
    display: flex;
    min-height: 100vh;
    background: var(--color-bg);
  }

  .admin-main {
    flex: 1;
    margin-left: 250px;
  }

  .admin-topbar {
    height: 60px;
    border-bottom: 1px solid var(--color-border);
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 var(--spacing-lg);
  }

  .admin-topbar-title {
    font-size: var(--font-size-base);
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--color-text);
  }

  .admin-user-menu {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
  }

  .admin-user-email {
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
  }

  .admin-content {
    padding: var(--spacing-lg);
  }

  @media (max-width: 768px) {
    .admin-main {
      margin-left: 0;
    }
  }
</style>
