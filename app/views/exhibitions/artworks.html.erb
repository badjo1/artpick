<div class="continuum-container">
  <header class="section-header">
    <h1><%= @exhibition.title %> - All Artworks</h1>
    <p class="text-secondary">
      <%= link_to "â† Back to Exhibition", exhibition_path(@exhibition) %>
    </p>
  </header>

  <% if @artworks.any? %>
    <div class="artwork-grid">
      <% @artworks.each_with_index do |artwork, index| %>
        <%= render partial: "artworks/card", locals: { artwork: artwork, rank: index + 1 } %>
      <% end %>
    </div>
  <% else %>
    <p class="empty-state">
      No artworks in this exhibition yet.
    </p>
  <% end %>
</div>
