<div class="continuum-container">
  <header class="section-header">
    <h1><%= @exhibition.title %> - All Artworks</h1>
    <p class="text-secondary">
      <%= link_to "â† Back to Exhibition", exhibition_path(@exhibition) %>
    </p>
  </header>

  <% if @screen_groups.any? || @ungrouped_artworks.any? %>
    <div class="artwork-grid">
      <% rank = 1 %>
      <% @screen_groups.each do |screen, artworks| %>
        <%= render partial: "artworks/screen_carousel", locals: { screen: screen, artworks: artworks, rank: rank } %>
        <% rank += 1 %>
      <% end %>
      <% @ungrouped_artworks.each do |artwork| %>
        <%= render partial: "artworks/card", locals: { artwork: artwork, rank: rank } %>
        <% rank += 1 %>
      <% end %>
    </div>
  <% else %>
    <p class="empty-state">
      No artworks in this exhibition yet.
    </p>
  <% end %>
</div>
