<div class="admin-container">
  <div class="admin-header">
    <h1>Upload Media</h1>
    <%= link_to "â† Back to Media", admin_exhibition_exhibition_media_path(@exhibition), class: "btn btn-secondary" %>
  </div>

  <div class="form-container">
    <h2>Bulk Upload Photos</h2>
    <%= form_with url: bulk_create_admin_exhibition_exhibition_media_path(@exhibition), method: :post, local: true, multipart: true, data: { turbo: false } do |form| %>
      <div class="form-group">
        <%= label_tag :files, "Photos / Videos" %>
        <%= file_field_tag 'files[]', multiple: true, accept: "image/*,video/*", required: true, class: "form-control", direct_upload: false %>
        <small class="form-help">Select multiple photos or videos to upload at once</small>
      </div>

      <div class="form-group">
        <%= label_tag :photographer, "Photographer (optional, applies to all)" %>
        <%= text_field_tag :photographer, nil, class: "form-control", placeholder: "Photographer name..." %>
      </div>

      <div class="form-actions">
        <%= submit_tag "Upload All Photos", class: "btn btn-primary" %>
        <%= link_to "Cancel", admin_exhibition_exhibition_media_path(@exhibition), class: "btn btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>
