<div class="continuum-container">
  <div class="admin-header">
    <h1>Settings</h1>
  </div>

  <% if @settings.any? %>
    <table class="continuum-table">
      <thead>
        <tr>
          <th>Key</th>
          <th>Value</th>
          <th>Type</th>
          <th>Exhibition</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @settings.each do |setting| %>
          <tr>
            <td><%= setting.key %></td>
            <td><%= setting.value %></td>
            <td><%= setting.setting_type %></td>
            <td><%= setting.exhibition&.title || "Global" %></td>
            <td>
              <%= link_to "Edit", edit_admin_setting_path(setting), class: "btn btn-small" %>
              <button type="button"
                      class="btn btn-small btn-danger"
                      data-action="click->modal#open"
                      data-modal-title="Delete Setting"
                      data-modal-body="<p>Are you sure you want to delete setting <strong><%= setting.key %></strong>?</p><p class='text-danger'>This action cannot be undone.</p>"
                      data-modal-url="<%= admin_setting_path(setting) %>"
                      data-modal-method="delete">
                Delete
              </button>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p class="empty-state">No settings found.</p>
  <% end %>
</div>
