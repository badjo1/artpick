<div class="admin-container">
  <div class="admin-header">
    <h1>Admin Dashboard</h1>
    <%= link_to "Uitloggen", session_path, data: { turbo_method: :delete }, class: "btn btn-secondary" %>
  </div>

  <div class="admin-nav">
    <%= link_to "Dashboard", admin_root_path, class: "nav-link active" %>
    <%= link_to "Afbeeldingen", admin_images_path, class: "nav-link" %>
    <%= link_to "Uitnodigingslinks", admin_invite_links_path, class: "nav-link" %>
    <%= link_to "Instellingen", edit_admin_settings_path, class: "nav-link" %>
  </div>

  <div class="dashboard-stats">
    <div class="stat-card">
      <h3>Totaal afbeeldingen</h3>
      <p class="stat-number"><%= @total_images %></p>
    </div>

    <div class="stat-card">
      <h3>Totaal stemmen</h3>
      <p class="stat-number"><%= @total_votes %></p>
    </div>

    <div class="stat-card">
      <h3>Actieve sessies</h3>
      <p class="stat-number"><%= @total_sessions %></p>
    </div>

    <div class="stat-card">
      <h3>⭐ Top 5 selecties</h3>
      <p class="stat-number"><%= @total_favorites %></p>
    </div>

    <div class="stat-card">
      <h3>Uitnodigingslinks</h3>
      <p class="stat-number"><%= @total_invite_links %></p>
    </div>
  </div>

  <div class="dashboard-section">
    <h2>Top 5 Afbeeldingen</h2>
    <table class="admin-table">
      <thead>
        <tr>
          <th>Positie</th>
          <th>Titel</th>
          <th>Elo Score</th>
          <th>Stemmen</th>
          <th>Win Rate</th>
          <th>⭐ Top 5</th>
        </tr>
      </thead>
      <tbody>
        <% @top_images.each_with_index do |image, index| %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= image.title %></td>
            <td><%= image.elo_score.round %></td>
            <td><%= image.vote_count %></td>
            <td><%= image.win_rate %>%</td>
            <td><%= image.favorite_count %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="dashboard-section">
    <h2>Recente Stemmen</h2>
    <table class="admin-table">
      <thead>
        <tr>
          <th>Winnaar</th>
          <th>Verliezer</th>
          <th>Tijdstip</th>
        </tr>
      </thead>
      <tbody>
        <% @recent_votes.each do |vote| %>
          <tr>
            <td><%= vote.winner.title %></td>
            <td><%= vote.loser.title %></td>
            <td><%= vote.created_at.strftime("%d-%m-%Y %H:%M") %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
