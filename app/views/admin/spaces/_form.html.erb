<%= form_with model: [:admin, space], class: "continuum-form" do |form| %>
  <% if space.errors.any? %>
    <div class="alert alert-error" style="margin-bottom: var(--spacing-lg);">
      <strong><%= pluralize(space.errors.count, "error") %> prohibited this space from being saved:</strong>
      <ul style="margin-top: var(--spacing-xs); padding-left: var(--spacing-md);">
        <% space.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name, "Name *" %>
    <%= form.text_field :name, required: true, class: "form-input", placeholder: "Crypto Art Museum" %>
  </div>

  <div class="form-group">
    <%= form.label :description, "Description" %>
    <%= form.text_area :description, rows: 4, class: "form-textarea", placeholder: "Brief description of the space..." %>
  </div>

  <div class="form-group">
    <%= form.label :location, "Location" %>
    <%= form.text_field :location, class: "form-input", placeholder: "Amsterdam, Netherlands" %>
  </div>

  <div class="form-group">
    <%= form.label :website_url, "Website URL" %>
    <%= form.url_field :website_url, class: "form-input", placeholder: "https://example.com" %>
  </div>

  <div class="form-actions" style="display: flex; gap: var(--spacing-sm); margin-top: var(--spacing-lg);">
    <%= form.submit class: "btn btn-primary" %>
    <%= link_to "Cancel", space.persisted? ? admin_space_path(space) : admin_spaces_path, class: "btn" %>
  </div>
<% end %>
