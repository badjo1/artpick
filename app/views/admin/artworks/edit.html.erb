<div class="continuum-container">
  <div class="admin-header">
    <h1>Edit Artwork - <%= @exhibition.title %></h1>
    <%= link_to "Back", admin_exhibition_artworks_path(@exhibition), class: "btn btn-secondary" %>
  </div>

  <div class="form-container">
    <%= form_with model: @artwork, url: admin_exhibition_artwork_path(@exhibition, @artwork), method: :patch, local: true do |f| %>
      <% if @artwork.errors.any? %>
        <div class="error-messages">
          <h3><%= pluralize(@artwork.errors.count, "error") %> prevented this artwork from being saved:</h3>
          <ul>
            <% @artwork.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :title, "Title" %>
        <%= f.text_field :title, class: "form-input", required: true %>
      </div>

      <div class="form-group">
        <%= f.label :artist_id, "Artist" %>
        <%= f.select :artist_id,
            options_from_collection_for_select(@artists, :id, :name, @artwork.artist_id),
            { include_blank: "Select an artist" },
            class: "form-input" %>
      </div>

      <div class="form-group">
        <%= f.label :description, "Description" %>
        <%= f.text_area :description, class: "form-input", rows: 4 %>
      </div>

      <div class="form-group">
        <%= f.label :year, "Year" %>
        <%= f.number_field :year, class: "form-input" %>
      </div>

      <div class="form-group">
        <%= f.label :medium, "Medium" %>
        <%= f.text_field :medium, class: "form-input" %>
      </div>

      <div class="form-group">
        <%= f.label :screen_id, "Screen (optional grouping)" %>
        <%= f.select :screen_id,
            options_from_collection_for_select(@screens, :id, :name, @artwork.screen_id),
            { include_blank: "No screen (show individually)" },
            class: "form-input" %>
      </div>

      <div class="form-group">
        <%= f.label :file, "New file (leave blank to keep current)" %>
        <%= f.file_field :file, accept: "image/jpeg,image/png,image/gif,image/webp,video/mp4", class: "form-input" %>
        <% if @artwork.file.attached? %>
          <div class="current-image">
            <p>Current file:</p>
            <% if @artwork.video? %>
              <%= video_tag url_for(@artwork.file), controls: true, preload: "metadata", style: "max-width: 300px; margin-top: 0.5rem;" %>
            <% else %>
              <%= image_tag @artwork.file, style: "max-width: 300px; margin-top: 0.5rem;" %>
            <% end %>
          </div>
        <% end %>
      </div>

      <div class="form-actions">
        <%= f.submit "Update Artwork", class: "btn btn-primary" %>
        <%= link_to "Cancel", admin_exhibition_artworks_path(@exhibition), class: "btn btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>
